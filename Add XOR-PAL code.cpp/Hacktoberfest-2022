#include <iostream>
using namespace std;

int main() {
    ios_base::sync_with_stdio(false);  //just increasing the speed
	cin.tie(0);
	cout.tie(0);
	int test; 
    cin>>test;
    while(test--){
        int n;
        cin>>n;
        string s;
        cin>>s;
    int ct=0;  //stores the count
    for(int i=0;i<n/2;i++){
        
        if(s[i]!=s[n-1-i]){
            ct++;  //increasing the count 
        }
    }
      cout<<(ct+1)/2<<endl;    
    }
	return 0;
}
